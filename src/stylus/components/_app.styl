@import '../bootstrap'
@import '../theme'

application($material)
  background: $material.background
  color: $material.text.primary

  a
    color: $material.text.link

app(application)

.application
  -webkit-backface-visibility: hidden
  display: flex
  flex-direction: column
  min-height: 100vh

  > main
    display: flex
    flex: 1 0 auto